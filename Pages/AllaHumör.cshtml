@page
@model Robot.AllaHumorModel
@{
    ViewData["Title"] = "Alla humör";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <button type="submit">Visa alla sparade humörposter</button>
</form>

@if (Model.MoodEntries != null && Model.MoodEntries.Any())
{
    <table border="1" cellpadding="5" cellspacing="0" class="mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Humör</th>
                <th>Text</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mood in Model.MoodEntries)
            {
                <tr>
                    <td>@mood.Id</td>
                    <td>@mood.Emoji</td>
                    <td>@mood.Text</td>
                </tr>
            }
        </tbody>
    </table>
}