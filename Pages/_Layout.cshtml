<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Robot</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- FontAwesome för ikoner -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Egna CSS -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Robot.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <a class="navbar-brand fw-bold text-primary fs-4" asp-area="" asp-page="/Index">
            <i class="fas fa-robot me-2"></i> MoodBot
        </a>
        <span class="d-none d-md-inline text-muted ms-2">
            – din smarta assistent för tips, humör och en bättre vardag
        </span>


                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index"><i class="fas fa-home me-2"></i>Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Tips"><i class="fas fa-lightbulb me-2"></i>Tips</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/MittHumor"><i class="fas fa-smile me-2"></i>Mitt humör</a>

                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Privacy"><i class="fas fa-shield-alt me-2"></i>Sekretess</a>
                            </li>
                        </ul>

                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm" class="d-flex">
                            <button type="submit" class="btn btn-outline-danger">Logga ut</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Robot - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap JS (med Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
